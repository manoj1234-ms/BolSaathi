# Server Configuration
PORT=5000

# MongoDB Connection String
# Replace with your MongoDB Atlas connection string
# IMPORTANT: Include database name and connection parameters
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bolsaathi?appName=Cluster0&retryWrites=true&w=majority

# JWT Secret
# Generate a strong random secret using: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-strong-random-secret-here-minimum-32-characters

# Client Origin
CLIENT_ORIGIN=http://localhost:5173
